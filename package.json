{
	"name": "lintroll",
	"version": "0.0.0-semantic-release",
	"description": "privatenumber's linting CLI",
	"keywords": [
		"lint",
		"eslint",
		"typescript eslint",
		"eslint-config"
	],
	"license": "MIT",
	"repository": "privatenumber/lintroll",
	"funding": "https://github.com/privatenumber/lintroll?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist"
	],
	"type": "module",
	"bin": "./dist/cli/index.mjs",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.cts",
	"exports": {
		".": {
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			},
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			}
		}
	},
	"imports": {
		"#pvtnbr": {
			"types": "./src/index.ts",
			"development": "./src/index.ts",
			"default": "./dist/index.mjs"
		},
		"#pkg-maps-resolver": {
			"types": "./src/resolvers/pkg-maps-resolver.ts",
			"development": "./src/resolvers/pkg-maps-resolver.ts",
			"default": "./dist/resolvers/pkg-maps-resolver.cjs"
		},
		"#cli": {
			"development": "./src/cli/index.ts",
			"default": "./dist/cli/index.mjs"
		}
	},
	"packageManager": "pnpm@10.12.1",
	"scripts": {
		"build": "pkgroll --export-condition=node --export-condition=development -i ./dist/resolvers/pkg-maps-resolver.cjs --minify --clean-dist",
		"type-check": "tsc",
		"lint": "tsx -C development ./src/cli/index.ts",
		"dev": "tsx watch -C development tests",
		"test": "tsx tests",
		"prepack": "pnpm build && clean-pkg-json"
	},
	"dependencies": {
		"@eslint-community/eslint-plugin-eslint-comments": "catalog:eslint-plugins",
		"@eslint/js": "catalog:eslint-plugins",
		"@eslint/markdown": "catalog:eslint-plugins",
		"@stylistic/eslint-plugin": "catalog:eslint-plugins",
		"@typescript-eslint/eslint-plugin": "catalog:eslint-plugins",
		"@typescript-eslint/parser": "catalog:eslint-plugins",
		"cleye": "^1.3.4",
		"confusing-browser-globals": "^1.0.11",
		"eslint": "^9.31.0",
		"eslint-import-resolver-typescript": "catalog:eslint-plugins",
		"eslint-plugin-import-x": "catalog:eslint-plugins",
		"eslint-plugin-jsonc": "catalog:eslint-plugins",
		"eslint-plugin-n": "catalog:eslint-plugins",
		"eslint-plugin-no-use-extend-native": "catalog:eslint-plugins",
		"eslint-plugin-promise": "catalog:eslint-plugins",
		"eslint-plugin-react": "catalog:eslint-plugins",
		"eslint-plugin-react-hooks": "catalog:eslint-plugins",
		"eslint-plugin-regexp": "catalog:eslint-plugins",
		"eslint-plugin-unicorn": "catalog:eslint-plugins",
		"eslint-plugin-vue": "catalog:eslint-plugins",
		"eslint-plugin-yml": "catalog:eslint-plugins",
		"get-conditions": "^1.0.0",
		"get-tsconfig": "^4.12.0",
		"globals": "^16.3.0",
		"nano-spawn": "^1.0.2",
		"resolve-pkg-maps": "^1.0.0",
		"tsx": "^4.20.3",
		"vue-eslint-parser": "catalog:eslint-plugins",
		"yaml-eslint-parser": "catalog:eslint-plugins"
	},
	"devDependencies": {
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/confusing-browser-globals": "^1.0.3",
		"@types/eslint": "^9.6.1",
		"@types/estree": "^1.0.8",
		"@types/node": "^24.1.0",
		"@types/react": "^19.1.8",
		"@typescript-eslint/rule-tester": "^8.38.0",
		"@typescript-eslint/utils": "^8.38.0",
		"clean-pkg-json": "^1.3.0",
		"find-up-simple": "^1.0.1",
		"manten": "^1.5.0",
		"pkgroll": "^2.14.5",
		"react": "^19.1.0",
		"read-package-up": "^11.0.0",
		"type-fest": "^4.41.0",
		"typescript": "^5.8.3"
	}
}
